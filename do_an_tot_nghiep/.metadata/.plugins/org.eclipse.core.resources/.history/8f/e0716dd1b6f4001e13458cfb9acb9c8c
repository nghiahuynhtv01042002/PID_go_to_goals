#ifndef INC_PID_MODULE_H_
#define INC_PID_MODULE_H_

#include "stdlib.h"
#include"stdio.h"
#include"math.h"
#include "Robot_odom.h"
typedef struct{
    float Kp;
    float Ki;
    float Kd;

    float setpoint;
    float current;
    float error;
    float pre_error;
    float integral;
    float derivative;

}PID_handleTypedef;

void pid_set_Kp_Ki_Kd(PID_handleTypedef* hpid,float Kp,float Ki,float Kd);
float calculat_pid_output(PID_handleTypedef* hpid);
float rad_to_degree(float rad);
float degree_to_rad(float degree);
float cal_speed_motor(float pid_output,);
#endif /* INC_PID_MODULE_H_ */
